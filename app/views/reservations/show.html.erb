<html>
<head>
</head>
<body> 
<div class="container">  
  <h3> Your reservation for this listing </h3>                                        
  <table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Listing ID</th>
      <th>Arriving Date</th>
      <th>Leaving Date</th>
      <th>Remarks</th>
      <th>Make Changes?</th>
    </tr>
  </thead>

  <tbody>
    <% @reservation.each do |r| %>
      <tr>
        <td><%= r.listing.id %></td>
        <td><%= r.arriving_date %></td>
        <td><%= r.leaving_date %></td>
        <td><%= r.remarks %></td>
        <td><%= link_to 'Edit', edit_listing_reservation_path %> <br/>
        <%= link_to 'Delete',listing_reservation_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Listings", listings_path %>
</div> 
</html>


