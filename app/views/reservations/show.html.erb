<html>
<head>
</head>
<body> 
<div class="container">  
  <h3> Review your reservation </h3>
  <p> <%= @reservation.listing.description %> </p> <br/>
  <table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Listing ID</th>
      <th>Arriving Date</th>
      <th>Leaving Date</th>
      <th>Number of nights</th>
      <th>Price per night (RM)</th>
      <th>Total Price (RM) </th>
      <th>Make Payment</th>
      <th>Make Changes?</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @reservation.listing_id %></td>
        <td><%= @reservation.arriving_date %></td>
        <td><%= @reservation.leaving_date %></td>
        <td><%= (@reservation.leaving_date - @reservation.arriving_date).to_i %></td>
        <td><%= humanized_money_with_symbol @reservation.listing.price_cents %></td>
        <td><%= @total_price %> </td>
        <td><%= link_to "Make Payment", payment_path %> </td>
        <td><%= link_to "Edit", edit_listing_reservation_path(@reservation.listing_id, @reservation.id) %> </td>
      </tr>
  </tbody>
</table>
</div> 
</html>


