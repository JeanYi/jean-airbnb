<div class="row">  
     <div class="col-md-3">
       <ul class= "sidebar-list">

   </div>    
      </ul>    
       <div class="col-md-7 text-center">

      <div class="panel panel-default">

          <div class="panel-heading">Edit your Profile</div> </br>

               

               <div class="panel-body">

                   <div class="container">
   
                 <div class="form-group">First Name
   
                 <%= form.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
   
                 </div>

                 <div class="form-group">First Name
   
                 <%= form.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Last Name" %>
   
                 </div>
   
                 <div class="form-group">Email
   
                <%= form.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
   
                 </div>

                  <div class="row">
   
                   <div class="col-md-4">
   
                    <div class="form-group">
   
                      <span class="btn btn-default btn-file"> 

                      Upload your profile picture </span> <%= form.file_field :image %>
   
                      </span>
   
                  </div>
   
                  </div>  
   
                  </div>

                 <div class="form-group"> Birthday
                 <%=form.date_field :birthday, class: "form-control", placeholder: "BD" %>
                 </div>

                 </br>
                 <div class="form-group"> Password 
                   <%= form.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter new password if you wish to change" %>
                 </div>
                 <div class="actions">
                   <%= form.submit "Save", class: "btn btn-primary" %>
                 </div>
       </div>
   </div>