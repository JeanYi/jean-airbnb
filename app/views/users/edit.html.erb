<h1>Update your profile</h1>

<div class="row">
    <%= form_for @edit_user do |form| %>
    <%= render partial: 'users/form', object: form %>
</div>

    <div class="submit-field">
      <%= form.submit %>
    </div>

    <div class="other-links">
      <%= link_to t(".sign_out"), sign_out_path %>
    </div>

<% end %>
